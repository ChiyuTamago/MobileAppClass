<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Test2113110015.Day2.EventP2"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EventPage2">
    <ContentPage.Content>
        <StackLayout BackgroundColor="AliceBlue">
            <StackLayout Margin="30">
                <Label
                    x:Name="showLabel"
                    FontSize="30"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="What do you call cow with 2 legs" />
                <Label Padding="40" />
                <Entry
                    x:Name="fNameEntry"
                    Placeholder="Answer"
                    TextColor="Gray" />
                <Label Padding="10" />
                <Button
                    x:Name="sendButton"
                    BackgroundColor="#84D96D"
                    HorizontalOptions="End"
                    Text="Submit" />
                <Entry
                    x:Name="addEntry"
                    Placeholder="Address"
                    TextColor="Gray" />
                <Image Source="bookcolor" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>